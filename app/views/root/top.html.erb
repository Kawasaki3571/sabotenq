
<div class = "page-title-container">
	<div class = "page-title">
		Top page
	</div>
</div>

<h3>現在公開中の問題一覧</h3>
<div class = "question-container">
 <% @questions.each do |post| %>
 	<div class = "q-list-box">
    	<div class = "taitoru">タイトル</div>
    	<div class = "question-title">
    		<%=link_to post.title, "/question_lists/#{post.id}", :style=>"color:#998a58;" %>
    	</div>
    	<div class = "question-explain">
    		<%= post.explain  %>
    	</div>
        <div class = "answear_count">
            <%= "現在の解答者数: #{post.answears.count}" %>
        </div>
        <div class = "created_at">
            <%= "created_at: #{post.created_at}" %>
        </div>
    </div>
 <% end %>
</div>
<div class = "taitoru">
    <%= "現在の登録者数...#{@user_count} 人!!いっぱいいますね!!"%>
</div>
<p>
	<%= link_to "ルール", "/rule", :style=>"color:orange;" %>
</p>

