<!DOCTYPE html>
<html>
  <head>
    <title>Sabotenq</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'track' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrapの基本テンプレート</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>



  </head>

  <body >
    <script type = "text/javascript">
$(function() {
$("container-answears").hover(
    function(){
        /* mouse enter の処理 */
        $(this).css("background", "#ffaaaa");
    }, 
    function(){
        /* mouse leave の処理 */
        $(this).css("background", "#222222");
    }
);
});

$(window).load(function(){
  $("container-answears").animate({
      'marginLeft': '500px'
    });
})
</script>

    

     <header>
      <div class = "top-of-top">
        <div class = "head-name-left">
          彼方の解を探すメディア
        </div>
        <div class = "head-name-right">
          <%= link_to 'About us', '/about_us' %>
        </div>
      </div>
<!--       <hgroup> -->
      <div class = "second-top">
        <div class = "logo-container">
          <!-- <img class = "logo-image" src = "/logo.png" href = "/top"> -->
          <%= link_to image_tag('logo.png', :class => "logo-image"), "/top" %>
        </div>
        <div class = ""></div>
      </div>

        <div class = "navbar-container">
        <div class = "navbar-leftbar"></div>
        <ul class="jajaja">
          <div class = "navbar-rightbar">
            <div id="container-fluid">
              <ul class="navbar-header" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
                <% if user_signed_in? %>
                  <li class="icon-bar header-menues">
                    <div class = "glyphicon glyphicon-log-out"></div>
                    <%= link_to 'Sign out', users_sign_out_path, method: :get, :style=>"color:white;" %>
                  </li>
                  <li class="icon-bar header-menues">
        <!-- ↓ここにつきましては、5章の方で正しいroutingに書き直します。 -->
                    <div class = "glyphicon glyphicon-home"></div>
                    <%= link_to current_user.user_name, user_path(current_user.id), :style=>"color:white;"%>
                  </li>
                  <li class="icon-bar header-menues">
                    
                  </li>
                <% else %>
                  <li class="icon-bar header-menues">
                    <div class = "glyphicon glyphicon-user"></div>
                    <%= link_to "Registration", new_user_registration_path, :style=>"color:white;" %>
                  </li>
                  <li class="icon-bar header-menues" >
                    <div class = "glyphicon glyphicon-log-in"></div>
                    <%= link_to "Sign in", new_user_session_path, :style=>"color:white;" %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </ul>
      </div>
<!--       </hgroup> -->
    </header>
    <div id = "wrap">
    <div class = "super-outer">
      <div class = "left-bar"></div>
      <div class = "main-content">
        <%= yield %>
      </div>
      <div class = "right-bar"></div>
    </div>
  </div>
  </body>
  <footer>
    <div class = "footer-wrapper">
      <div class = "copy-right">© Kawatthy</div>
      <div class = "footer-about-us">About us</div>
    </div>
  </footer>
</html>